<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="@dimen/medium_space">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:drawableLeft="@drawable/ic_arrow_left"
            android:drawablePadding="3dp"
            android:background="@drawable/rounded_shape"
            android:text="@string/common_cancel"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_pencil_off"
            android:drawablePadding="3dp"
            android:background="@drawable/rounded_shape"
            android:text="@string/common_clear"
            android:textColor="#FFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewSignature2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/please_sign"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:background="@drawable/border_layout_sign"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="4"/>

    <Button
        android:id="@+id/getsign"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:layout_margin="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_pencil_lock"
        android:drawablePadding="3dp"
        android:background="@drawable/rounded_shape"
        android:text="@string/common_save"
        android:textColor="#FFF" />

</LinearLayout>